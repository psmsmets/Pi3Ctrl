<h1 class="h2 pt-3 pb-2 mb-3 border-bottom">Ctrl</h1>
<div class="row">

  <p class="pt-4 lead">SoundFile general configuration</p>
  <dl class="row pt-4">
    <dd class="col-4 col-md-3 text-end">player:</dd>
    <dd class="col-8 col-md-9"><code>{{config['SOUNDFILE_PLAYER']}}</code></dd>
    <dd class="col-4 col-md-3 text-end">folder:</dd>
    <dd class="col-8 col-md-9"><code>{{config['SOUNDFILE_FOLDER']}}</code></dd>
    <dd class="col-4 col-md-3 text-end">allowed extensions:</dd>
    <dd class="col-8 col-md-9"><code>{{config['SOUNDFILE_ALLOWED_EXTENSIONS']}}</code></dd>
  </dl>

  <hr class="my-4 my-md-5">

  <form class="pb-4" id="ctrl-form" novalidate>

    {% for sf in range(3) %}

    <h3 class="mb-3 hstack gap-3">Audio <div class="vr"></div> <small class="text-muted">SoundFile {{sf}}</small></h3>

    <div class="row mb-2 mb-md-3">
      <div class="col-4 col-md-3 text-end">
        <label class="form-check-label" for="audioClip{{sf}}Check">Enabled</label>
      </div>
      <div class="col-8 col-md-9">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="audioClip{{sf}}Check"> 
        </div>
      </div>
    </div>

    <div class="row mb-2 mb-md-3">
      <div class="col-4 col-md-3 text-end">Button PIN</div>
      <div class="col-8 col-md-9">
        <span class="badge text-bg-primary">{{config['BUTTON_PINS'][sf]}}</span>
        <i class="bi bi-play-circle-fill"></i>
      </div>
    </div>

    <div class="row mb-2 mb-md-3">
      <div class="col-4 col-md-3 text-end">LED PIN</div>
      <div class="col-8 col-md-9">
        <span class="badge text-bg-primary">{{config['LED_PINS'][sf]}}</span>
        <i class="bi bi-lightbulb-fill"></i>
      </div>
    </div>

    <div class="row mb-2 mb-md-3">
      <div class="d-none d-md-block col-md-3 text-md-end mt-2">Soundfile</div>
      <div class="col-10 offset-2 col-md-9 offset-md-0">
        <input type="file" class="form-control" id="audioClip{{sf}}File" />
        <div class="invalid-feedback">
          Please enter a valid file.
        </div>
      </div>
    </div>

    <hr class="my-4 my-md-5">

    {% endfor %}

    <div class="row mt-5 mb-4 justify-content-end">
      <div class="col-md-9">
        <button class="btn btn-outline-primary" type="reset">Cancel</button>
        <button class="btn btn-primary" type="submit" value="submit">Submit</button>
      </div>
    </div>

  </form>

</div>

