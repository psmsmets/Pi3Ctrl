{% set strategy = 'html' %}
<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
  {% block head %}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="Pi3Ctrl">

  <meta name="mobile-web-app-capable" content="yes">

  <title>{% block title %}{% endblock %} {% if hostname %}{{hostname}}{% endif %}</title>

  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static', filename='icon/apple-touch-icon.png') }}">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', filename='icon/favicon-32x32.png') }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static', filename='icon/favicon-16x16.png') }}">
  <link rel="manifest" href="{{ url_for('static', filename='site.webmanifest') }}">
  <link rel="mask-icon" href="{{ url_for('static', filename='icon/safari-pinned-tab.svg') }}" color="#00a6d6">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">

  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='3rd/bootstrap-icons-1.11.3/bootstrap-icons.min.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='3rd/bootstrap-5.3.3/bootstrap.min.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/pi3ctrl.css') }}">

  <!-- Custom styles for this template -->
  {% block styles %}{% endblock %}

  {% endblock %}
</head>
<body class="bg-theme">
  <nav class="navbar navbar-expand-md flex-column navbar-dark bg-black p-md-0 border-start border-end">
    <div class="container-fluid">
      <a class="navbar-brand d-md-none" href="#" onclick="return false;">Pi3Ctrl :: {{hostname}}</a>
      <a class="navbar-brand d-none d-md-block text-break" href="#" onclick="return false;"><small>{{hostname|replace('-','<br>')}}</small></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar"
       aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse flex-column text-center mt-2 mt-md-0" id="navbar">
        <ul class="nav nav-pills nav-flush flex-column border-top mb-auto">
          <li class="nav-item border-bottom">
            <a class="active nav-link" aria-current="page" href="#" data-bs-toggle="tab" data-bs-target="home">
              <i class="bi bi-house-door"></i><span> Home</span>
            </a>
          </li>
          <li class="nav-item border-bottom">
            <a class="nav-link" href="#ctrl" data-bs-toggle="tab" data-bs-target="ctrl">
              <i class="bi bi-joystick"></i><span> Ctrl</span>
            </a>
          </li>
          <li class="nav-item border-bottom">
            <a class="nav-link" href="#wlan" data-bs-toggle="tab" data-bs-target="wlan">
              <i class="bi bi-wifi"></i><span> Wi-Fi</span>
            </a>
          </li>
          <li class="nav-item border-bottom">
            <a class="nav-link" href="#status" data-bs-toggle="tab" data-bs-target="status">
              <i class="bi bi-journal-code"></i><span> Status</span>
            </a>
          </li>
        </ul>
        <ul class="nav nav-pills flex-column border-top">
          <li class="nav-item">
            <a class="nav-link" href="https://github.com/psmsmets/pi3ctrl"
             title="Github" target="_blank" rel="noopener noreferrer">
              <i class="bi bi-github" alt="Github"></i><span> Github</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <main class="container-fluid ps-md-4" id="content">
    {% block main %}..{% endblock %}
  </main>

  <!-- JS -->
  <script src="{{ url_for('static', filename='3rd/bootstrap-5.3.3/bootstrap.bundle.min.js') }}"></script>
  <script src="{{ url_for('static', filename='3rd/highcharts-9.3.1/highcharts.js') }}"></script>
  <script src="{{ url_for('static', filename='3rd/crypto-js-4.1.1/core.js') }}"></script>
  <script src="{{ url_for('static', filename='3rd/crypto-js-4.1.1/sha256.js') }}"></script>
  <script src="{{ url_for('static', filename='js/get-response.js') }}"></script>
  <script src="{{ url_for('static', filename='js/show-password-toggle.min.js') }}"></script>
  <script src="{{ url_for('static', filename='js/pi3ctrl.js') }}"></script>

  <!-- Custom scripts for this template -->
  {% block script %}{% endblock %}
</body>
</html>
